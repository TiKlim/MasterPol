<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		WindowStartupLocation="CenterScreen"
		x:CompileBindings="False"
        x:Class="Avtoservice.EditWindow"
        Title="Информация о товаре">
	<Grid ColumnDefinitions="*,*,*"
		  RowDefinitions="Auto,Auto,Auto,Auto,Auto,*,Auto"
		  Name="gridEdit">

		<Button Grid.Column="0"
				Grid.Row="0"
				Name="back">
			<TextBlock Text="Назад"
					   HorizontalAlignment="Center"/>
		</Button>
		
		<TextBox Watermark="Артикул"
				 Name="articule"
				 Grid.Column="0"
				 Grid.Row="1"/>

		<TextBox Watermark="Название"
				 Name="name"
				 Grid.Column="0"
				 Grid.Row="2"/>

		<TextBox Watermark="Описание"
				 Name="description"
				 Grid.Column="0"
				 Grid.Row="3"
				 TextWrapping="Wrap"/>
		
		<Image Source="{Binding Picture}"
			   Grid.Column="0"
			   Grid.Row="4"/>

		<TextBox Watermark="Цена"
				 Name="cost"
				 Grid.Column="1"
				 Grid.Row="1"/>

		<TextBox Watermark="Максимально возможная скидка"
				 Name="maxDiscount"
				 Grid.Column="1"
				 Grid.Row="2"/>

		<TextBox Watermark="Скидка"
				 Name="discount"
				 Grid.Column="1"
				 Grid.Row="3"/>

		<TextBox Watermark="Количество на складе"
				 Name="count"
				 Grid.Column="1"
				 Grid.Row="4"/>

		<ComboBox Grid.Column="2"
				  Grid.Row="1">
			<ComboBoxItem></ComboBoxItem>
		</ComboBox>

		<ComboBox Grid.Column="2"
				  Grid.Row="2">
			<ComboBoxItem></ComboBoxItem>
		</ComboBox>

		<ComboBox Grid.Column="2"
				  Grid.Row="3">
			<ComboBoxItem></ComboBoxItem>
		</ComboBox>

		<ComboBox Grid.Column="2"
				  Grid.Row="4">
			<ComboBoxItem></ComboBoxItem>
		</ComboBox>

		<Button Grid.Column="2"
				Grid.Row="6"
				Name="save"
				HorizontalAlignment="Right">
			<TextBlock Text="Сохранить"
					   HorizontalAlignment="Center"/>
		</Button>
		
	</Grid>
</Window>
